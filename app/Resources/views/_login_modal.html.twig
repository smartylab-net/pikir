<div class="modal fade" id="loginFormModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="formModalLabel">Войдите для продолжения</h4>
            </div>
            <form class="form-horizontal form form-validate" role="form" action="{{ path("fos_user_security_check") }}" method="post" novalidate="novalidate" >
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="col-sm-3">
                            <label for="_username" class="control-label">{{ 'security.login.username'|trans({}, 'SonataUserBundle') }}</label>
                        </div>
                        <div class="col-sm-9">
                            <input id="username"
                                   name="_username"  class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'SonataUserBundle') }}" required aria-required="true" ><div class="form-control-line"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <label for="password1" class="control-label">{{ 'security.login.password'|trans({}, 'SonataUserBundle') }}</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="password"
                                   name="_password" required aria-required="true" placeholder="{{ 'security.login.password'|trans({}, 'SonataUserBundle') }}"><div class="form-control-line"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                        </div>
                        <div class="col-sm-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                    <a class="btn btn-raised btn-default pull-left" href="{{ path('sonata_user_registration_register') }}">{{ 'link_register'|trans({}, 'SonataUserBundle') }}</a>
                    {% render(controller('HWIOAuthBundle:Connect:connect')) %}
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>