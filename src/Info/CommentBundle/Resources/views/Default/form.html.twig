<div class="card style-default-bright">
    {{ form_start(form,{'attr':{'class':'form-horizontal', 'novalidate':true, 'id':'comment-form'} }) }}
    <div class="card-head small-padding line-height-body">
        <header>Добавить комментарий</header>
    </div>
    <div class="card-body small-padding">
        <div class="col-md-2">
            {{ form_label(form.comment) }}
        </div>
        <div class="col-md-10">
            {{ form_widget(form.comment,{'attr':{'class':'form-control'} }) }}
        </div>
    </div>
    <div class="card-actionbar">
        <div class="card-actionbar-row">
            {{ form_widget(form.save,{'attr':{'class':'btn ink-reaction'} }) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>