{% extends "::base.html.twig" %}
{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading"><h4>{{ post.title }}</h4>
            </br>{{ post.author }}  |  {{ post.created|format_date }}  |  {{ post.id }}
        </div>
        <div class="panel-body">{{ post.text }}
        </br>
        {% for i in 1..10 %}
            {% if (i<post.rating) %}
                <img src="{{ asset('public/images/img/star-on.png') }}">
            {% else %}
                <img src="{{ asset('public/images/img/star-off.png') }}">
            {% endif %}
        {% endfor %}
        </div>
    </div>
{% endblock %}