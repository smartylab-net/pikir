<a href="javascript:void(0);" class="btn btn-icon-toggle btn-default" data-toggle="dropdown">
    <i class="fa fa-bell"></i>
    {% if count %}
    <sup class="badge style-danger" id="notification-count">{{ count }}</sup>
    {% endif %}
</a>
<ul class="dropdown-menu animation-expand">
    <li id="notification-header" class="dropdown-header">Уведомления</li>
    {% for notification in notifications %}
    <li>
        {% include 'InfoNotificationBundle:Default:index.html.twig' with {'notification':notification} %}
    </li>
    {% else %}
        <li>
            <a href="javascript:void(0);">
                <small>Уведомлений пока нет</small>
            </a>
        </li>
    {% endfor %}
    <li class="dropdown-header">Options</li>
    <li><a href="../../html/pages/login.html">View all messages <span class="pull-right"><i class="fa fa-arrow-right"></i></span></a></li>
    <li><a href="../../html/pages/login.html">Mark as read <span class="pull-right"><i class="fa fa-arrow-right"></i></span></a></li>
</ul><!--end .dropdown-menu -->