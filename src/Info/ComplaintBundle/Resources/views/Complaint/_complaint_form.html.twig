{{ form_start(form,{'attr': {'class':'form', 'novalidate':true } }) }}

    <div class="form-group {% if isCompanyPage is defined %}hide{% else %}floating-label{% endif %}">

        {% if company is defined and company is not null %}
            <label>Название компании</label>
            <p class="form-control-static">{{ company.name }}</p>
        {% else %}
            <input type="text" id="company" name="company" class="form-control">
            <label>Название компании</label>
        {% endif %}
        {% if form.company is defined %}
            <div style="display: none">
                {{ form_widget(form.company) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group floating-label">
        {{ form_widget(form.text, { 'attr': {'class': 'form-control autosize', 'rows': 1} }) }}
        {{ form_label(form.text) }}
    </div>

