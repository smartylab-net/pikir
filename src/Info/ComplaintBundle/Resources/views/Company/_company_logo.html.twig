{% if company.logo %}
    {% thumbnail company.logo, 'small' with {'class': 'img-circle border-white border-xl img-responsive auto-width', 'alt': company.name} %}
{% else %}
    <img class="img-circle border-white border-xl img-responsive" src="{{ asset('public/images/noimage.gif') }}" width="150" height="150">
{% endif %}