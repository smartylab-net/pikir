{% extends "::base.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/infocomplaint/js/jquery_autocomplete.js') }}"></script>
    <script type="text/javascript">
        $(function () {
            $('#fixed').raty({
                readOnly: false,
                starOff: '{{ asset('public/images/img/star-off.png') }}',
                starOn: '{{ asset('public/images/img/star-on.png') }}',
                number: 10,
                width: 250,
                click: function (score, evt) {
                    $('#Complaint_rating').val(score);
                }
            });
        });
    </script>
{% endblock %}

{% block body %}

        {{ form_start(form,{'attr': {'class':'form-horizontal' } }) }}


        <label class="col-lg-2 control-label">Company name</label>

        <div class="form-group">
            {{ form_widget(form.company) }}
        </div>


        <label class="col-lg-2 control-label">Title</label>

        <div class="form-group">
            {{ form_widget(form.title) }}
        </div>


        <label class="col-lg-2 control-label">Text</label>

        <div class="form-group">
            {{ form_widget(form.text , {'attr':{'cols':120, 'rows':15} }) }}
        </div>



        <div class="form-group">
            <label class="col-lg-2 control-label">Rating</label>

            <div id="fixed" class="col-lg-10">
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                {{ form_widget(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
{% endblock %}