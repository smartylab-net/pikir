{{ form_start(form,{'attr': {'class':'form', 'novalidate':true, 'enctype':'multipart/form-data' } }) }}

    <div class="form-group {% if isCompanyPage is defined %}hide{% else %}floating-label{% endif %}">

        {% if company is defined and company is not null %}
            <label>Название компании</label>
            <p class="form-control-static">{{ company.name }}</p>
        {% else %}
            <input type="text" id="company" name="company" class="form-control">
            <label>Название компании</label>
        {% endif %}
        {% if form.company is defined %}
            <div style="display: none">
                {{ form_widget(form.company) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group floating-label">
        {{ form_widget(form.text, { 'attr': {'class': 'form-control autosize', 'rows': 1} }) }}
        {{ form_label(form.text) }}
    </div>

    {#<div class="form-group">#}
    {#<label>Rating</label>#}

    {#<div id="fixed" class="col-md-10">#}
    {#</div>#}
    {#</div>#}

    <div class="tab-pane" id="fotos">
        <span class="btn btn-xs btn-success fileinput-button">
            <i class="glyphicon glyphicon-plus"></i>
            <span>Добавить картинки</span>
            <input id="fileupload" type="file" name="files[]" data-url="{{ oneup_uploader_endpoint('gallery') }}" multiple="">
        </span>
        <div class="span6">
            <br>
            <div id="progress" class="progress" style="display: none">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                    <span class="sr-only"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div id="files"></div>
        </div>
    </div>

    <div class="card-actionbar">
        <div class="card-actionbar-row no-padding">
            {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-flat btn-primary ink-reaction'}}) }}
        </div>
    </div>
{{ form_end(form) }}