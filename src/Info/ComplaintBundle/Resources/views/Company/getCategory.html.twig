{% extends "::base.html.twig" %}
{% block title %}{{ parent() }} : {{ title }}{% endblock %}
{% block body %}
    {% if pagination.getTotalItemCount > 0 %}
        <div class="row">

            {% for company in pagination %}
                <div class="col-md-6">
                {% include "InfoComplaintBundle:Company:_companyItem.html.twig" with {'company':company} %}
                </div>
            {% endfor %}
        </div>
        <!--end row-->
        <div class="pagination pagination-right">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <h2>
            В этой категории компаний пока нет
        </h2>
    {% endif %}
{% endblock %}