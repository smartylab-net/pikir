{% extends "::base.html.twig" %}
{% block body %}
    <div class="panel panel-default">
        </br>{{ post.title }}
        </br>{{ post.author }}
        </br>{{ post.created|format_date }}
        </br>{{ post.id }}
        </br>{{ post.text }}
        </br>
        {% for i in 1..10 %}
            <div class="{% if i <= post.rating %} vote-active {{ i }}{% else %} vote-stars {% endif %}"></div>
        {% endfor %}
        <div class="clear"></div>
    </div>
{% endblock %}